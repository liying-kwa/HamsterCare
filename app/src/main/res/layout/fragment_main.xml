<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="5sp">

    <TextView
        android:id="@+id/hamsterName"
        android:text="HAMSTER1"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/hamsterDpMain"
        app:srcCompat="@drawable/ic_hamster_svgrepo_com"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <LinearLayout
        android:id="@+id/bigLinearLayout"
        android:orientation="horizontal"
        android:paddingTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/leftLinearLayout"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:text="FOOD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/foodPicture"
            app:srcCompat="@drawable/ic_food_100"
            android:layout_gravity="center"
            android:layout_marginVertical="10sp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:text="Amount: Full"
            android:textSize="15sp"
            android:textColor="#0E7800"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/topUpFood"
            android:text="Top-Up Food!"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/prevFoodTopUpDateTime"
            android:text="Last Top-Up: Insert Date Here"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:text="WATER"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/waterPicture"
            app:srcCompat="@drawable/ic_water_100"
            android:layout_gravity="center"
            android:layout_marginVertical="10sp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:text="Amount: Full"
            android:textSize="15sp"
            android:textColor="#0E7800"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/topUpWater"
            android:text="Top-Up Water!"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/prevWaterTopUpDateTime"
            android:text="Last Top-Up: Insert Date Here"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </LinearLayout>

    <Switch
        android:id="@+id/autoTopUp"
        android:text="Auto Top-Up"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:checked="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>