<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="5sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="How to Use"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingTop="30sp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Bottom Navigation Bar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10sp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/helpBottomNav"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Feed Tab"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="30sp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/feed_tab"
            android:layout_gravity="center"
            android:paddingTop="10sp"
            android:layout_width="150dp"
            android:layout_height="300dp"/>

        <TextView
            android:text="@string/feedTab"
            android:gravity="left"
            android:paddingTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Photo Tab"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="30sp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/photo_tab"
            android:layout_gravity="center"
            android:paddingTop="10sp"
            android:layout_width="150dp"
            android:layout_height="300dp"/>

        <TextView
            android:text="@string/photoTab"
            android:gravity="left"
            android:paddingTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Help Tab"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="30sp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/help_tab"
            android:layout_gravity="center"
            android:paddingTop="10sp"
            android:layout_width="150dp"
            android:layout_height="300dp"/>

        <TextView
            android:text="@string/helpTab"
            android:gravity="left"
            android:paddingTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>